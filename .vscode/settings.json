{
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true,
		"**/frontend/dist": true,
		"**/frontend": false,
		"**/server": false,
		"**/rest": false,
		"**/scheduler": false,
		"**/scraper": false,
		"**/.drizzle": false
	},
	"terminal.integrated.cwd": "${workspaceFolder}",
	"rest-client.environmentVariables": {
		"$shared": {
			"baseUrl": "http://localhost:2500/api"
		}
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"sqltools.connections": [
		{
			"previewLimit": 50,
			"driver": "SQLite",
			"name": "PriceTracker",
			"database": "./pricetracker.sqlite"
		}
	]
}
